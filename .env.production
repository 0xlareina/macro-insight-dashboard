# CryptoSense Dashboard - Production Environment Variables
# Copy this file to .env in production and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3001
CORS_ORIGIN=http://localhost:3000,http://localhost:80

# JWT Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=cryptosense
DB_PASSWORD=your-secure-postgres-password
DB_NAME=cryptosense_prod
DB_SSL=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# API Keys (Required for production)
# Get from: https://binance.com/en/my/settings/api-management
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key

# Get from: https://coingecko.com/en/api/pricing
COINGECKO_API_KEY=your-coingecko-pro-api-key

# Alternative.me API (Free - no key required)
ALTERNATIVE_ME_API_KEY=

# Cache Configuration
CACHE_TTL_PRICES=300
CACHE_TTL_FEAR_GREED=3600
CACHE_TTL_MARKET_OVERVIEW=600

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Security
HELMET_ENABLED=true
CORS_CREDENTIALS=true

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE=true
LOG_CONSOLE=false

# Optional: Error Tracking
# SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000

# Health Check
HEALTH_CHECK_ENABLED=true

# Backup Configuration (Optional)
DB_BACKUP_ENABLED=false
DB_BACKUP_SCHEDULE=0 2 * * *

# Performance
MAX_CONNECTIONS=100
QUERY_TIMEOUT=30000

# SSL (for production behind reverse proxy)
TRUST_PROXY=true
